{
    "meta": {
        "label": "Sentiment analysis",
        "description": "Estimate the sentiment polarity of a text (positive, negative, neutral)",
        "icon": "icon-star-half-full",
        "iconColor": "green"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "input_dataset",
    "inputRoles": [
        {
            "name": "input_dataset",
            "label": "Input Dataset",
            "description": "Dataset containing the text data to analyze",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output dataset",
            "description": "Dataset with enriched output",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "connection_info",
            "label": "GCP Connection",
            "type": "PRESET",
            "parameterSetId" : "connection-info",
            "mandatory" : true
        },
        {
            "name": "input_text_col",
            "label": "Input text column",
            "type": "COLUMN",
            "mandatory": true
        },
        {
            "name": "sentiment_scale",
            "label": "Sentiment scale",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "binary",
                    "label": "negative / positive"
                },
                {
                    "value": "ternary",
                    "label": "negative / neutral / positive"
                },
                {
                    "value": "1to5",
                    "label": "highly negative / negative / neutral / positive / highly positive"
                },
                {
                    "value": "continuous",
                    "label": "Number between 0 (highly negative) and 1 (highly positive)"
                }
            ],
            "defaultValue": "ternary"
        },
        {
            "name": "output_detected_language",
            "label": "Output detected language",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "name": "output_magnitude",
            "label": "Output magnitude",
            "description": "Sentiment magnitude is not normalized (ie will tend to be higher with document size)",
            "type": "BOOLEAN",
            "defaultValue": false
        }
    ],
    "resourceKeys": []
}