{
    "meta": {
        "label": "API configuration",
        "icon": "icon-gcp-natural-language-api icon-cloud"
    },
    "defaultDefinableAtProjectLevel": true,
    "defaultDefinableInline": false,
    "params": [
        {
            "name": "separator1",
            "label": "Authentication",
            "type": "SEPARATOR",
            "description": "Please refer to the GCP documentation:https://cloud.google.com/iam/docs/creating-managing-service-account-keys"
        },
        {
            "name": "gcp_service_account_key",
            "label": "GCP service account key",
            "description": "Service account key as JSON. If empty, attempts to ascertain credentials from the environment.",
            "type": "PASSWORD",
            "mandatory": false
        },
        {
            "name": "separator2",
            "label": "API quota",
            "type": "SEPARATOR"
        },
        {
            "name": "api_quota_rate_limit",
            "label": "Rate limit",
            "description": "Maximum number of requests per period for a given DSS activity",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 100,
            "minI": 1
        },
        {
            "name": "api_quota_period",
            "label": "Period",
            "description": "Reset period of the quota in seconds",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 30,
            "minI": 1
        },
        {
            "name": "separator3",
            "label": "Performance tuning",
            "type": "SEPARATOR"
        },
        {
            "name": "parallel_workers",
            "label": "Concurrency",
            "description": "Maximum number of threads calling the API in parallel",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 4,
            "minI": 1,
            "maxI": 100
        }
    ]
}
